---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import '../styles/global.css';
const BASE_PATH = '/personal-website';
const withBase = (path = '') => `${BASE_PATH}/${path.replace(/^\/+/, '')}`;
const lang = Astro.url.searchParams.get('lang') === 'en' ? 'en' : 'zh';
const isEn = lang === 'en';

const heroStats = isEn
  ? [
      { value: '500W+', label: 'Pipeline Opportunity' },
      { value: '5+', label: 'Major Product Iterations' },
      { value: '1500+', label: 'Monthly Platform Users' }
    ]
  : [
      { value: '500W+', label: '潜在线索商机' },
      { value: '5+', label: '核心版本迭代' },
      { value: '1500+', label: '月活平台用户' }
    ];
---

<!DOCTYPE html>
<html>
  <Header title={isEn ? "You Jiangbin | Portfolio" : "尤江彬 | 个人网站"} />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" lang={lang} />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content hero-panel">
              <div class="hero-kicker">{isEn ? 'AI PRODUCT LEAD · AGENT ERA' : 'AI 产品负责人 · AGENT 时代'}</div>
              <h1>
                {isEn
                  ? 'Building enterprise AI agents\nfrom idea to real-world value.'
                  : '把企业级 AI 智能体\n从想法做到真实价值。'}
              </h1>
              <p class="lead">
                {isEn
                  ? 'B.S. from Zhejiang University, M.Eng. from UCAS (Institute of Remote Sensing). Currently AI Product Manager at China Telecom AI, leading agent products from strategy to launch. Focused on turning LLM capability into measurable business outcomes.'
                  : '浙江大学本科，中科院遥感所硕士。现任中国电信 AI 公司产品经理，负责智能体产品从战略规划、研发协同到落地迭代，持续把大模型能力转化为可衡量的业务价值。'}
              </p>

              <div class="hero-stats">
                {heroStats.map((item) => (
                  <div class="hero-stat-item">
                    <div class="hero-stat-value">{item.value}</div>
                    <div class="hero-stat-label">{item.label}</div>
                  </div>
                ))}
              </div>
            </div>
            <div class="hero-actions">
              <a href="mailto:youjiangbin2011@gmail.com" class="button w-button">{isEn ? 'Contact' : '联系我'}</a>
              <a href={`${withBase('software-development')}${isEn ? '?lang=en' : ''}`} class="button w-button ghost-btn">{isEn ? 'View Selected Work' : '查看代表作品'}</a>
            </div>
          </main>
          <div class="projects-section">
            <a href={`${withBase('software-development')}${isEn ? '?lang=en' : ''}`} class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src={withBase('assets/browser.svg')} loading="lazy" alt="" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>{isEn ? 'AI Product Management' : 'AI产品管理'}</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">{isEn ? 'Highlights' : '重点方向'}</div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">{isEn ? 'Super Agent (Cloud)' : '超级智能体（云端）'}</div>
                    <div class="single-chip small-chip">{isEn ? 'Agent Platform' : '智能体平台'}</div>
                    <div class="single-chip small-chip">LLMOps</div>
                    <div class="single-chip small-chip">{isEn ? 'Product Architecture' : '产品架构设计'}</div>
                    <div class="single-chip small-chip">{isEn ? 'Workflow Design' : 'AI工作流'}</div>
                  </div>
                </div>
              </div>
            </a>
            <a href={`${withBase('personal-projects')}${isEn ? '?lang=en' : ''}`} class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container devops-img">
                  <img src={withBase('assets/database.svg')} loading="lazy" alt="" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>{isEn ? 'Personal Projects' : '个人项目'}</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">{isEn ? 'Stack' : '技术栈'}</div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">Astro</div>
                    <div class="single-chip small-chip">{isEn ? 'Knowledge Management' : '知识管理'}</div>
                    <div class="single-chip small-chip">{isEn ? 'Agent-driven' : 'Agent驱动'}</div>
                    <div class="single-chip small-chip">{isEn ? 'Open Source' : '开源贡献'}</div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>
